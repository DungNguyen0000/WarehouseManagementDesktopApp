<UserControl x:Class="WarehouseManagementDesktopApp.Views.GoodLocations.UpdateGoodLocationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WarehouseManagementDesktopApp.Views.GoodLocations"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:tools="clr-namespace:WarehouseManagementDesktopApp.Core.ValueConverter.MyApp.Tools;assembly=WarehouseManagementDesktopApp.Core"
             x:Name="root"
             Width="1267.2"
             Height="741.6"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             TextElement.FontSize="13"
             TextElement.FontWeight="Regular"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="7*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0"
              Margin="0,100,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0"
                  Margin="0,20,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="6*" />
                </Grid.ColumnDefinitions>
                <TextBlock HorizontalAlignment="Center"
                           FontSize="20"
                           Style="{StaticResource Parameter}">
                    Mã Sản Phẩm
                </TextBlock>
                <TextBox Grid.Column="1"
                         Margin="25,5,25,5"
                         Style="{StaticResource TextBoxNormal}"
                         Text="{Binding Path=Id}" />
            </Grid>
            <Grid Grid.Row="1"
                  Margin="0,20,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="6*" />
                </Grid.ColumnDefinitions>
                <TextBlock HorizontalAlignment="Center"
                           FontSize="20"
                           Style="{StaticResource Parameter}">
                    Tên Sản Phẩm
                </TextBlock>
                <TextBox Grid.Column="1"
                         Margin="25,5,25,5"
                         Style="{StaticResource TextBoxNormal}"
                         Text="{Binding Path=Name}" />
            </Grid>
            <Grid Grid.Row="2"
                  Margin="0,20,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="6*" />
                </Grid.ColumnDefinitions>
                <TextBlock HorizontalAlignment="Center"
                           FontSize="20"
                           Style="{StaticResource Parameter}">
                    Vị Trí Kệ
                </TextBlock>
                <ComboBox Grid.Column="1"
                          Margin="25,2,25,2"
                          materialDesign:HintAssist.Hint="Vị Trí Kệ"
                          Style="{StaticResource ComboBoxStyle}"
                          Text="{Binding Testdepth}">
                    <ComboBoxItem>A</ComboBoxItem>
                    <ComboBoxItem>B</ComboBoxItem>
                    <ComboBoxItem>C</ComboBoxItem>
                    <ComboBoxItem>D</ComboBoxItem>
                    <ComboBoxItem>E</ComboBoxItem>
                    <ComboBoxItem>F</ComboBoxItem>
                </ComboBox>
            </Grid>
            <Grid Grid.Row="3"
                  Margin="0,20,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="6*" />
                </Grid.ColumnDefinitions>
                <TextBlock HorizontalAlignment="Center"
                           FontSize="20"
                           Style="{StaticResource Parameter}">
                    Vị Trí Ô
                </TextBlock>
                <ComboBox Grid.Column="1"
                          Margin="25,2,25,2"
                          materialDesign:HintAssist.Hint="Vị Trí Ô"
                          Style="{StaticResource ComboBoxStyle}"
                          Text="{Binding Testdepth}">
                    <ComboBoxItem>A</ComboBoxItem>
                    <ComboBoxItem>B</ComboBoxItem>
                    <ComboBoxItem>C</ComboBoxItem>
                    <ComboBoxItem>D</ComboBoxItem>
                    <ComboBoxItem>E</ComboBoxItem>
                    <ComboBoxItem>F</ComboBoxItem>
                </ComboBox>
            </Grid>
            <Grid Grid.Row="4"
                  Margin="0,20,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="6*" />
                </Grid.ColumnDefinitions>
                <TextBlock HorizontalAlignment="Center"
                           FontSize="20"
                           Style="{StaticResource Parameter}">
                    Chọn Số Lô
                </TextBlock>
                <ComboBox Grid.Column="1"
                          Margin="25,2,25,2"
                          materialDesign:HintAssist.Hint="Chọn Số Lô"
                          Style="{StaticResource ComboBoxStyle}"
                          Text="{Binding Testdepth}">
                    <ComboBoxItem>A</ComboBoxItem>
                    <ComboBoxItem>B</ComboBoxItem>
                    <ComboBoxItem>C</ComboBoxItem>
                    <ComboBoxItem>D</ComboBoxItem>
                    <ComboBoxItem>E</ComboBoxItem>
                    <ComboBoxItem>F</ComboBoxItem>
                </ComboBox>
            </Grid>

            <Grid Grid.Row="5"
                  Margin="0,20,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="6*" />
                </Grid.ColumnDefinitions>
                <TextBlock HorizontalAlignment="Center"
                           FontSize="20"
                           Style="{StaticResource Parameter}">
                    Số Cột Một Lô
                </TextBlock>
                <ComboBox Grid.Column="1"
                          Margin="25,2,25,2"
                          materialDesign:HintAssist.Hint="Số Cột"
                          Style="{StaticResource ComboBoxStyle}"
                          Text="{Binding Testdepth}">
                    <ComboBoxItem>A</ComboBoxItem>
                    <ComboBoxItem>B</ComboBoxItem>
                    <ComboBoxItem>C</ComboBoxItem>
                    <ComboBoxItem>D</ComboBoxItem>
                    <ComboBoxItem>E</ComboBoxItem>
                    <ComboBoxItem>F</ComboBoxItem>
                </ComboBox>
            </Grid>
            <Grid Grid.Row="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0"
                        Width="150"
                        Height="50"
                        Command="{Binding SearchCommand}"
                        Style="{StaticResource MenuButton}">
                    Thêm
                </Button>
                <Button Grid.Column="1"
                    Width="150"
                    Height="50"
                    Command="{Binding SearchCommand}"
                    Style="{StaticResource MenuButton}">
                    Xoá
                </Button>
            </Grid>
        </Grid>
        <materialDesign:Card Grid.Column="1"
                             Margin="20,20,20,20"
                             HorizontalContentAlignment="Center">
            <Canvas Name="Slotpanel" />
        </materialDesign:Card>

    </Grid>
</UserControl>
