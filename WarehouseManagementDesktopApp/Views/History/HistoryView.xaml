                    <DataGrid Margin="5,0,5,0"
                              RowBackground="#FFD4D6EA"
                              AlternatingRowBackground="#F2F2F2"
                              VerticalAlignment="Center"
                              AutoGenerateColumns="False"
                              BorderBrush="Black"
                              ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle2}"
                              BorderThickness="0"
                              EnableColumnVirtualization="False"
                              AreRowDetailsFrozen="True"
                              SelectionMode="Extended"
                              GridLinesVisibility="None"
                              HorizontalScrollBarVisibility="Auto"
                              CanUserReorderColumns="False"
                              IsReadOnly="True"
                              ItemsSource="{Binding WarningStockStockcardentries, Mode=TwoWay}"
                              Style="{StaticResource DataGrid}"
                              Height="451">
                        <!--  Font Color/ Type of Column Headings  -->
                        <DataGrid.Resources>
                            <Style TargetType="{x:Type DataGridColumnHeader}">

                                <Setter Property="HorizontalContentAlignment"
                                        Value="Center" />
                                <Setter Property="Background"
                                        Value="#FF00294D" />
                                <Setter Property="Foreground"
                                        Value="White" />
                                <Setter Property="Height"
                                        Value="35" />
                                <Setter Property="VerticalContentAlignment"
                                        Value="Center" />
                            </Style>

                        </DataGrid.Resources>

                        <DataGrid.CellStyle>

                            <Style TargetType="DataGridCell">

                                <Style.Triggers>

                                    <Trigger Property="IsSelected"
                                             Value="True">

                                        <Setter Property="Background"
                                                Value="White" />
                                        <Setter Property="FontSize"
                                                Value="24" />

                                    </Trigger>

                                </Style.Triggers>

                            </Style>

                        </DataGrid.CellStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="60"
                                                Binding="{Binding Id}">

                                <DataGridTextColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,4,0,2"
                                                    HorizontalAlignment="Center"
                                                    Orientation="Horizontal">
                                            <TextBlock Padding="0,0,5,5"
                                                       FontSize="25"
                                                       Text="Mã SP" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                                <DataGridTextColumn.Foreground>
                                    <SolidColorBrush Color="Black" />
                                </DataGridTextColumn.Foreground>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment"
                                                Value="Center" />
                                        <Setter Property="Background"
                                                Value="Transparent" />
                                        <Setter Property="IsEnabled"
                                                Value="False" />
                                        <Setter Property="Height"
                                                Value="25" />
                                        <Setter Property="FontSize"
                                                Value="20" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="130"
                                                Binding="{Binding itemId}">

                                <DataGridTextColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,4,0,2"
                                                    HorizontalAlignment="Center"
                                                    Orientation="Horizontal">
                                            <TextBlock Padding="0,0,5,5"
                                                       FontSize="25"
                                                       Text="Mã SP" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                                <DataGridTextColumn.Foreground>
                                    <SolidColorBrush Color="Black" />
                                </DataGridTextColumn.Foreground>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment"
                                                Value="Center" />
                                        <Setter Property="Background"
                                                Value="Transparent" />
                                        <Setter Property="IsEnabled"
                                                Value="False" />
                                        <Setter Property="Height"
                                                Value="25" />
                                        <Setter Property="FontSize"
                                                Value="20" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Width="210"
                                                Binding="{Binding name}">

                                <DataGridTextColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,4,0,2"
                                                    HorizontalAlignment="Center"
                                                    Orientation="Horizontal">
                                            <TextBlock Padding="0,0,5,5"
                                                       FontSize="25"
                                                       Text="Tên SP" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                                <DataGridTextColumn.Foreground>
                                    <SolidColorBrush Color="Black" />
                                </DataGridTextColumn.Foreground>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment"
                                                Value="Center" />
                                        <Setter Property="Background"
                                                Value="Transparent" />
                                        <Setter Property="IsEnabled"
                                                Value="False" />
                                        <Setter Property="Height"
                                                Value="25" />
                                        <Setter Property="FontSize"
                                                Value="20" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="140"
                                                Binding="{Binding unit, Mode=TwoWay}">

                                <DataGridTextColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,4,0,2"
                                                    HorizontalAlignment="Center"
                                                    Orientation="Horizontal">
                                            <TextBlock Padding="0,0,5,5"
                                                       FontSize="25"
                                                       Text="Đơn vị" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                                <DataGridTextColumn.Foreground>
                                    <SolidColorBrush Color="Black" />
                                </DataGridTextColumn.Foreground>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment"
                                                Value="Center" />
                                        <Setter Property="Background"
                                                Value="Transparent" />
                                        <Setter Property="IsEnabled"
                                                Value="False" />
                                        <Setter Property="Height"
                                                Value="25" />
                                        <Setter Property="FontSize"
                                                Value="20" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="200"
                                                Binding="{Binding minimumStockLevel}">

                                <DataGridTextColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="2,4,2,2"
                                                    Orientation="Horizontal">
                                            <TextBlock Padding="0,0,5,5"
                                                       FontSize="25"
                                                       Text="Định mức dưới" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                                <DataGridTextColumn.Foreground>
                                    <SolidColorBrush Color="Black" />
                                </DataGridTextColumn.Foreground>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment"
                                                Value="Center" />
                                        <Setter Property="Background"
                                                Value="Transparent" />
                                        <Setter Property="IsEnabled"
                                                Value="False" />
                                        <Setter Property="Height"
                                                Value="25" />
                                        <Setter Property="FontSize"
                                                Value="20" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="200"
                                                Binding="{Binding maximumStockLevel}">

                                <DataGridTextColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="2,4,2,2"
                                                    Orientation="Horizontal">
                                            <TextBlock Padding="0,0,5,5"
                                                       FontSize="25"
                                                       Text="Định mức trên" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                                <DataGridTextColumn.Foreground>
                                    <SolidColorBrush Color="Black" />
                                </DataGridTextColumn.Foreground>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment"
                                                Value="Center" />
                                        <Setter Property="Background"
                                                Value="Transparent" />
                                        <Setter Property="IsEnabled"
                                                Value="False" />
                                        <Setter Property="Height"
                                                Value="25" />
                                        <Setter Property="FontSize"
                                                Value="20" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="200"
                                                Binding="{Binding afterQuantity}">

                                <DataGridTextColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="2,4,2,2"
                                                    Orientation="Horizontal">
                                            <TextBlock Padding="0,0,5,5"
                                                       FontSize="25"
                                                       Text="Tồn cuối" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                                <DataGridTextColumn.Foreground>
                                    <SolidColorBrush Color="Black" />
                                </DataGridTextColumn.Foreground>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment"
                                                Value="Center" />
                                        <Setter Property="Background"
                                                Value="Transparent" />
                                        <Setter Property="IsEnabled"
                                                Value="False" />
                                        <Setter Property="Height"
                                                Value="25" />
                                        <Setter Property="FontSize"
                                                Value="20" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                </Border>
            </materialDesign:Card>
            <materialDesign:Card Visibility="{Binding StockCardDataGrid, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Border>
                    <DataGrid Margin="5,0,5,0"
                              RowBackground="#FFD4D6EA"
                              AlternatingRowBackground="#F2F2F2"
                              VerticalAlignment="Center"
                              AutoGenerateColumns="False"
                              BorderBrush="Black"
                              ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle2}"
                              BorderThickness="0"
                              EnableColumnVirtualization="False"
                              AreRowDetailsFrozen="True"
                              SelectionMode="Extended"
                              GridLinesVisibility="None"
                              HorizontalScrollBarVisibility="Auto"
                              CanUserReorderColumns="False"
                              IsReadOnly="True"
                              ItemsSource="{Binding Stockcardentries, Mode=TwoWay}"
                              Style="{StaticResource DataGrid}"
                              Height="451">
                        <!--  Font Color/ Type of Column Headings  -->
                        <DataGrid.Resources>
                            <Style TargetType="{x:Type DataGridColumnHeader}">

                                <Setter Property="HorizontalContentAlignment"
                                        Value="Center" />
                                <Setter Property="Background"
                                        Value="#FF00294D" />
                                <Setter Property="Foreground"
                                        Value="White" />
                                <Setter Property="Height"
                                        Value="35" />
                                <Setter Property="VerticalContentAlignment"
                                        Value="Center" />
                            </Style>

                        </DataGrid.Resources>

                        <DataGrid.CellStyle>

                            <Style TargetType="DataGridCell">

                                <Style.Triggers>

                                    <Trigger Property="IsSelected"
                                             Value="True">

                                        <Setter Property="Background"
                                                Value="White" />
                                        <Setter Property="FontSize"
                                                Value="24" />

                                    </Trigger>

                                </Style.Triggers>

                            </Style>

                        </DataGrid.CellStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="160"
                                                Binding="{Binding date, StringFormat='{}{0:yyyy-MM-dd}'}">

                                <DataGridTextColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,4,0,2"
                                                    HorizontalAlignment="Center"
                                                    Orientation="Horizontal">
                                            <TextBlock Padding="0,0,5,5"
                                                       FontSize="25"
                                                       Text="Thời gian" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                                <DataGridTextColumn.Foreground>
                                    <SolidColorBrush Color="Black" />
                                </DataGridTextColumn.Foreground>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment"
                                                Value="Center" />
                                        <Setter Property="Background"
                                                Value="Transparent" />
                                        <Setter Property="IsEnabled"
                                                Value="False" />
                                        <Setter Property="Height"
                                                Value="25" />
                                        <Setter Property="FontSize"
                                                Value="20" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Width="200"
                                                Binding="{Binding beforeQuantity}">

                                <DataGridTextColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,4,0,2"
                                                    HorizontalAlignment="Center"
                                                    Orientation="Horizontal">
                                            <TextBlock Padding="0,0,5,5"
                                                       FontSize="25"
                                                       Text="Trước kế hoạch" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                                <DataGridTextColumn.Foreground>
                                    <SolidColorBrush Color="Black" />
                                </DataGridTextColumn.Foreground>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment"
                                                Value="Center" />
                                        <Setter Property="Background"
                                                Value="Transparent" />
                                        <Setter Property="IsEnabled"
                                                Value="False" />
                                        <Setter Property="Height"
                                                Value="25" />
                                        <Setter Property="FontSize"
                                                Value="20" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="200"
                                                Binding="{Binding inputQuantity, Mode=TwoWay}">

                                <DataGridTextColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,4,0,2"
                                                    HorizontalAlignment="Center"
                                                    Orientation="Horizontal">
                                            <TextBlock Padding="0,0,5,5"
                                                       FontSize="25"
                                                       Text="Lượng nhập" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                                <DataGridTextColumn.Foreground>
