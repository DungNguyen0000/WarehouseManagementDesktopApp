<UserControl
    x:Class="WarehouseManagementDesktopApp.Views.GoodExport.ProcessingGoodExportView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:WarehouseManagementDesktopApp.Views.GoodExport"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:tools="clr-namespace:WarehouseManagementDesktopApp.Core.ValueConverter.MyApp.Tools;assembly=WarehouseManagementDesktopApp.Core"
    x:Name="ProccessingGoodReceipt"
    Width="1300.2"
    Height="741.6"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">
    <UserControl.Resources>
        <FontFamily x:Key="FontAwesome">/Fonts/fontawesome-webfont.ttf#FontAwesome</FontFamily>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <materialDesign:Card
            Grid.Column="0"
            Width="600"
            Margin="0,30,0,30"
            HorizontalAlignment="Center"
            HorizontalContentAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                    <TextBlock
                        Margin="0,7"
                        FontSize="30"
                        Style="{StaticResource PageModuleTitle}">
                        <Bold>
                            ĐƠN HÀNG ĐANG ĐƯỢC XỬ LÝ
                        </Bold>
                    </TextBlock>
                    <Grid
                        Width="400"
                        Height="8"
                        Background="#FF00294D" />
                </StackPanel>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="8.5*" />
                        <RowDefinition Height="1.5*" />
                    </Grid.RowDefinitions>
                    <Border x:Name="ProcessPanel" Grid.Row="0">
                        <DataGrid
                            Width="{Binding ElementName=ProcessPanel, Path=ActualWidth, Converter={tools:RatioConverter}, ConverterParameter=0.95}"
                            Height="{Binding ElementName=ProcessPanel, Path=ActualHeight, Converter={tools:RatioConverter}, ConverterParameter=0.95}"
                            Margin="5,5,5,10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            AlternatingRowBackground="White"
                            AreRowDetailsFrozen="True"
                            AutoGenerateColumns="False"
                            BorderBrush="Black"
                            BorderThickness="0"
                            CanUserReorderColumns="False"
                            ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle2}"
                            EnableColumnVirtualization="False"
                            GridLinesVisibility="None"
                            HorizontalScrollBarVisibility="Auto"
                            ItemsSource="{Binding ProcessingGoodIssue}"
                            RowBackground="#FFD4D6EA"
                            SelectedIndex="{Binding SelectedIndexGoodIssue}"
                            SelectionMode="Extended"
                            Style="{StaticResource DataGrid}">
                            <!--  Font Color/ Type of Column Headings  -->
                            <DataGrid.Resources>
                                <Style TargetType="{x:Type DataGridColumnHeader}">
                                    <Setter Property="Height" Value="20" />
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    <Setter Property="Background" Value="#FF00294D" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="VerticalContentAlignment" Value="Center" />

                                </Style>

                            </DataGrid.Resources>

                            <DataGrid.CellStyle>

                                <Style TargetType="DataGridCell">

                                    <Style.Triggers>

                                        <Trigger Property="IsSelected" Value="True">

                                            <Setter Property="Background" Value="White" />
                                            <Setter Property="FontSize" Value="20" />
                                        </Trigger>

                                    </Style.Triggers>

                                </Style>

                            </DataGrid.CellStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="*" Binding="{Binding Id}">

                                    <DataGridTextColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="2,4,2,2" Orientation="Horizontal">
                                                <TextBlock
                                                    Padding="0,0,5,5"
                                                    FontSize="25"
                                                    Text="Mã Đơn" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTextColumn.HeaderTemplate>
                                    <DataGridTextColumn.Foreground>
                                        <SolidColorBrush Color="Black" />
                                    </DataGridTextColumn.Foreground>
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="IsEnabled" Value="False" />
                                            <Setter Property="Height" Value="25" />
                                            <Setter Property="FontSize" Value="20" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding DateTime}"
                                    Header="Employee Name">
                                    <DataGridTextColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="2,4,2,2" Orientation="Horizontal">
                                                <TextBlock
                                                    Padding="0,0,5,5"
                                                    FontSize="25"
                                                    Text="Thời Gian" />

                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTextColumn.HeaderTemplate>
                                    <DataGridTextColumn.Foreground>
                                        <SolidColorBrush Color="Black" />
                                    </DataGridTextColumn.Foreground>
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="Height" Value="25" />
                                            <Setter Property="FontSize" Value="20" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Note}"
                                    Header="Employee Name">
                                    <DataGridTextColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="2,4,2,2" Orientation="Horizontal">
                                                <TextBlock
                                                    Padding="0,0,5,5"
                                                    FontSize="25"
                                                    Text="Ghi Chú" />

                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTextColumn.HeaderTemplate>
                                    <DataGridTextColumn.Foreground>
                                        <SolidColorBrush Color="Black" />
                                    </DataGridTextColumn.Foreground>
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="Height" Value="25" />
                                            <Setter Property="FontSize" Value="20" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>


                            </DataGrid.Columns>
                        </DataGrid>


                    </Border>
                    <Grid Grid.Row="1" HorizontalAlignment="Center">
                        <Button
                            Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            BorderBrush="Black"
                            BorderThickness="0,1,1,1"
                            Command="{Binding ReloadCommand}"
                            Style="{DynamicResource MaterialDesignIconButton}">
                            <materialDesign:PackIcon
                                Width="50"
                                Height="50"
                                Kind="Reload"
                                Opacity="1" />
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
        </materialDesign:Card>
        <materialDesign:Card
            Grid.Column="1"
            Width="600"
            Margin="0,30,0,30"
            HorizontalAlignment="Center"
            HorizontalContentAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                    <TextBlock
                        Margin="0,7"
                        FontSize="30"
                        Style="{StaticResource PageModuleTitle}">
                        <Bold>
                            ĐƠN HÀNG CẦN ĐƯỢC XỬ LÝ
                        </Bold>
                    </TextBlock>
                    <Grid
                        Width="400"
                        Height="8"
                        Background="#FF00294D" />
                </StackPanel>
                <StackPanel Grid.Row="1">
                    <Border x:Name="DemandPanel" >
                        <DataGrid
                            Width="{Binding ElementName=ProcessPanel, Path=ActualWidth, Converter={tools:RatioConverter}, ConverterParameter=0.95}"
                            Height="{Binding ElementName=ProcessPanel, Path=ActualHeight, Converter={tools:RatioConverter}, ConverterParameter=0.95}"
                            Margin="5,5,5,10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            AlternatingRowBackground="#F2F2F2"
                            AreRowDetailsFrozen="True"
                            AutoGenerateColumns="False"
                            BorderBrush="Black"
                            BorderThickness="0"
                            CanUserReorderColumns="False"
                            ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle2}"
                            EnableColumnVirtualization="False"
                            GridLinesVisibility="None"
                            HorizontalScrollBarVisibility="Auto"
                            ItemsSource="{Binding IssueContainerSources}"
                            RowBackground="#FFD4D6EA"
                            SelectionMode="Extended"
                            Style="{StaticResource DataGrid}">
                            <!--  Font Color/ Type of Column Headings  -->
                            <DataGrid.Resources>
                                <Style TargetType="{x:Type DataGridColumnHeader}">

                                    <Setter Property="Height" Value="20" />
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    <Setter Property="Background" Value="#FF00294D" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="VerticalContentAlignment" Value="Center" />
                                </Style>

                            </DataGrid.Resources>

                            <DataGrid.CellStyle>

                                <Style TargetType="DataGridCell">

                                    <Style.Triggers>

                                        <Trigger Property="IsSelected" Value="True">

                                            <Setter Property="Background" Value="White" />
                                            <Setter Property="FontSize" Value="20" />
                                        </Trigger>

                                    </Style.Triggers>

                                </Style>

                            </DataGrid.CellStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="250" Binding="{Binding containerId}">

                                    <DataGridTextColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="2,4,2,2" Orientation="Horizontal">
                                                <TextBlock
                                                    Padding="0,0,5,5"
                                                    FontSize="25"
                                                    Text="Mã Rổ" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTextColumn.HeaderTemplate>
                                    <DataGridTextColumn.Foreground>
                                        <SolidColorBrush Color="Black" />
                                    </DataGridTextColumn.Foreground>
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="IsEnabled" Value="False" />
                                            <Setter Property="Height" Value="25" />
                                            <Setter Property="FontSize" Value="17" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn
                                    Width="150"
                                    Binding="{Binding itemId}"
                                    Header="Employee Name">
                                    <DataGridTextColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="2,4,2,2" Orientation="Horizontal">
                                                <TextBlock
                                                    Padding="0,0,5,5"
                                                    FontSize="25"
                                                    Text="Mã SP" />

                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTextColumn.HeaderTemplate>
                                    <DataGridTextColumn.Foreground>
                                        <SolidColorBrush Color="Black" />
                                    </DataGridTextColumn.Foreground>
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="Height" Value="25" />
                                            <Setter Property="FontSize" Value="17" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn
                                    Width="300"
                                    Binding="{Binding name}"
                                    Header="Employee Name">
                                    <DataGridTextColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="2,4,2,2" Orientation="Horizontal">
                                                <TextBlock
                                                    Padding="0,0,5,5"
                                                    FontSize="25"
                                                    Text="Tên SP" />

                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTextColumn.HeaderTemplate>
                                    <DataGridTextColumn.Foreground>
                                        <SolidColorBrush Color="Black" />
                                    </DataGridTextColumn.Foreground>
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="Height" Value="25" />
                                            <Setter Property="FontSize" Value="17" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn
                                    Width="170"
                                    Binding="{Binding Quantity}"
                                    Header="Employee Name">
                                    <DataGridTextColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="2,4,2,2" Orientation="Horizontal">
                                                <TextBlock
                                                    Padding="0,0,5,5"
                                                    FontSize="25"
                                                    Text="Số Lượng" />

                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTextColumn.HeaderTemplate>
                                    <DataGridTextColumn.Foreground>
                                        <SolidColorBrush Color="Black" />
                                    </DataGridTextColumn.Foreground>
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="Height" Value="25" />
                                            <Setter Property="FontSize" Value="17" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn
                                    Width="100"
                                    Binding="{Binding Unit}"
                                    Header="Employee Name">
                                    <DataGridTextColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="2,4,2,2" Orientation="Horizontal">
                                                <TextBlock
                                                    Padding="0,0,5,5"
                                                    FontSize="25"
                                                    Text="Đơn vị" />

                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTextColumn.HeaderTemplate>
                                    <DataGridTextColumn.Foreground>
                                        <SolidColorBrush Color="Black" />
                                    </DataGridTextColumn.Foreground>
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="Height" Value="25" />
                                            <Setter Property="FontSize" Value="17" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn
                                    Width="150"
                                    Binding="{Binding Cell}"
                                    Header="Employee Name">
                                    <DataGridTextColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="2,4,2,2" Orientation="Horizontal">
                                                <TextBlock
                                                    Padding="0,0,5,5"
                                                    FontSize="25"
                                                    Text="Vị Trí Kệ" />

                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTextColumn.HeaderTemplate>
                                    <DataGridTextColumn.Foreground>
                                        <SolidColorBrush Color="Black" />
                                    </DataGridTextColumn.Foreground>
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="Height" Value="25" />
                                            <Setter Property="FontSize" Value="17" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn
                                    Width="150"
                                    Binding="{Binding Location}"
                                    Header="Employee Name">
                                    <DataGridTextColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="2,4,2,2" Orientation="Horizontal">
                                                <TextBlock
                                                    Padding="0,0,5,5"
                                                    FontSize="25"
                                                    Text="Vị Trí" />

                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTextColumn.HeaderTemplate>
                                    <DataGridTextColumn.Foreground>
                                        <SolidColorBrush Color="Black" />
                                    </DataGridTextColumn.Foreground>
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="Height" Value="25" />
                                            <Setter Property="FontSize" Value="17" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                    </Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Button
                            Grid.Row="4"
                            Width="200"
                            Height="80"
                            Margin="0,20,0,10"
                            Command="{Binding FinishCommand}"
                            Style="{StaticResource MenuButton}">
                            Hoàn thành
                        </Button>
                        <Button
                            Grid.Row="4"
                            Grid.Column="1"
                            Width="200"
                            Height="80"
                            Margin="0,20,0,10"
                            Command="{Binding ExcelExportCommand}"
                            Style="{StaticResource MenuButton}">
                            Xuất Excel
                        </Button>
                    </Grid>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

    </Grid>
</UserControl>
