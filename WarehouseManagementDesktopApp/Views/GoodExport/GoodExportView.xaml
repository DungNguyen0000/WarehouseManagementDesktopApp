    <Grid>
            <Grid>
                <materialDesign:DialogHost x:Name="DialogBox"
                                           Grid.Row="1"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           DialogTheme="Inherit"
                                           IsOpen="{Binding IsMessageDialogOpen}">
                    <materialDesign:DialogHost.DialogContent>
                        <Grid Background="{StaticResource SistrainColorBrush}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="18*" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0"
                                  Background="{StaticResource SistrainColorBrush}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Margin="10,0,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           FontFamily="Arial"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           Style="{StaticResource PageModuleTitle}">
                                Thông Báo
                                </TextBlock>
                                <Button Grid.Column="1"
                                        HorizontalAlignment="Right"
                                        Background="{StaticResource SistrainColorBrush}"
                                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                                        Content="{materialDesign:PackIcon Kind=CloseBox,
                                                                  Size=18}"
                                        Foreground="White"
                                        IsCancel="True"
                                        Style="{StaticResource MaterialDesignFlatButton}" />
                            </Grid>

                            <Viewbox Grid.Row="1"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Bottom">
                                <!--  Visibility="{Binding Path=VisibilityAddView, Converter={StaticResource BooleanToVisibilityConverter}}">  -->
                                <uc1:MessageBox DataContext="{Binding MessageBox}" />
                            </Viewbox>
                        </Grid>
                    </materialDesign:DialogHost.DialogContent>
                    <Border ClipToBounds="True">
                        <Grid>
                            <materialDesign:ColorZone Effect="{DynamicResource MaterialDesignShadowDepth5}"
                                                      Mode="PrimaryMid" />
                        </Grid>
                    </Border>
                </materialDesign:DialogHost>
            </Grid>
            <Grid>
                <materialDesign:DialogHost Grid.Row="1"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           DialogTheme="Inherit"
                                           IsOpen="{Binding IsDialogOpen}">
                    <materialDesign:DialogHost.DialogContent>
                        <Grid Background="{StaticResource SistrainColorBrush}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="18*" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0"
                                  HorizontalAlignment="Right">
                                <Button Background="{StaticResource SistrainColorBrush}"
