                                        Style="{StaticResource MaterialDesignFlatButton}" />
                            </Grid>

                            <Grid Grid.Row="1"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Bottom">
                                <!--  Visibility="{Binding Path=VisibilityAddView, Converter={StaticResource BooleanToVisibilityConverter}}">  -->
                                <uc:DialogGoodIssue Width="600"
                                                    Height="600"
                                                    DataContext="{Binding DialogGoodIssue}" />
                            </Grid>
                        </Grid>
                    </materialDesign:DialogHost.DialogContent>
                    <Border ClipToBounds="True">
                        <Grid>
                            <materialDesign:ColorZone Effect="{DynamicResource MaterialDesignShadowDepth5}"
                                                      Mode="PrimaryMid" />
                        </Grid>
                    </Border>
                </materialDesign:DialogHost>
            </Grid>
            <Grid>
                <Grid.Resources>

                    <Style TargetType="Grid">
                        <Setter Property="Opacity"
                                Value="1" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=DialogBox, Path=IsOpen}"
                                         Value="True">
                                <Setter Property="Opacity"
                                        Value="0.3" />
                            </DataTrigger>
