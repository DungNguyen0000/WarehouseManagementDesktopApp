                                                    <DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Margin="2,4,2,2"
                                                                        Orientation="Horizontal">
                                                                <TextBlock Padding="0,0,5,5"
                                                                           FontSize="25"
                                                                           Text="Tên SP" />
                                                                <fa:FontAwesome Height="30"
